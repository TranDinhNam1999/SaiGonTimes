<div class="post-sidebar-area left-sidebar mt-30 mb-30 bg-white box-shadow">
            <!-- Sidebar Widget -->
    <div class="single-sidebar-widget p-30">
        <!-- Section Title -->
        <div class="section-heading">
            <h5>Most Popular</h5>
        </div>
        {{#each lcTopviewposts }}
            <div class="single-blog-post d-flex">
            <div class="post-thumbnail">
                <img src="/public/img/bg-img/{{PostID}}.jpg" alt="">
            </div>
            <div class="post-content">
                <a href="/post/detail/{{PostID}}" class="post-title"> {{Abtract}}</a>
                <div class="post-meta d-flex justify-content-between">
                    <a href="#"><i class="fa fa-eye" aria-hidden="true"></i> {{Views}}</a>
                    <a href="#"><i class="fa fa-thumbs-o-up" aria-hidden="true"></i> {{Ranks}}</a>
                    <a href="#">
                        
                        <i class="fa fa-comments-o" aria-hidden="true">
                            {{#if num_of_com}}
                                {{num_of_com}}
                        {{/if}}
                        </i> 
                    </a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>


