{{#section 'css'}}
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">
{{/section}}

<style> 
  .container {
    margin: 0 auto;
    margin-top: 20px;
    margin-bottom: 20px;
  }

  .avatar-img {
    max-width: 100px;
    max-height: 100px;
  }
</style>

<div class="container">
    <h2>Danh sách bài viết của bạn</h2>
    <table class="table table-bordered posts-table" id="myTable">
        <thead>
            <tr>
                <th>#</th>
                <th>Tiêu đề</th>
                <th>Tóm tắt</th>
                <th>Thể loại</th>
                <th>Avatar</th>
                <th>Trạng thái</th>
                <th>Hành động</th>
                <th hidden="true"></th>
            </tr>
        </thead>
        <tbody>
            {{#each this.posts}}
              <tr>
                  <td></td>
                  <td>{{Title}}</td>
                  <td>{{Abtract}}</td>
                  <td>{{catName}}</td>
                  <td><img class="avatar-img" src="/public/img/post-avatar/{{BigAvatar}}"></td>
                  <td>{{StatusName}}</td>
                  <td>
                    <button
                      {{#if isApproved}}
                        disabled 
                      {{/if}}
                      type="button" 
                      class="btn btn-primary myButton"
                      data-toggle="modal" data-target="#editModal"
                    >
                      Sửa
                    </button>
                  </td>
                  <td hidden="true">{{PostID}}</td>
              </tr>
            {{/each}}
        </tbody>
    </table>
</div>   

<div class="modal fade" id="editModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <form class="modal-content" method="POST" action="">
      <div class="modal-header">
        <h5 class="modal-title">Sửa bài viết</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <label for="">Tiêu đề</label>
          <input type="text" name="title" id="title" class="form-control">
        </div>
        <div class="form-group">
          <label for="">Tóm tắt</label>
          <input type="text" name="adstract" id="adstract" class="form-control">
        </div>
        <div class="form-group">
          <label for="cat">Thể loại</label>
          <input disabled type="text" name="cat" id="cat" class="form-control">
        </div>
        <input type="text" name="id" id="id" hidden>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
        <button type="button" class="btn btn-primary" data-dismiss="modal" id="saveStatus">Lưu thay đổi</button>
      </div>
    </form>
  </div>
</div>

{{#section 'js'}}
  <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>
  <script>
    // add index for row:
    let index = 1;
    $("table tr").each(function(i, v){
        $(this).children('td').each(function(ii, vv){
            if(ii == 0) {
              vv.innerHTML = index;
              index++;
            }
        }); 
    })

    // code to read selected table row cell data (values).
    $("#myTable").on('click','.myButton',function(){
      // get the current row
      var currentRow=$(this).closest("tr"); 
      
      var title=currentRow.find("td:eq(1)").text();
      var adstract=currentRow.find("td:eq(2)").text();
      var category=currentRow.find("td:eq(3)").text();
      var status=currentRow.find("td:eq(5)").text();
      var postsId=currentRow.find("td:eq(7)").text();

      $("#id").val(postsId);
      $("#title").val(title);
      $("#adstract").val(adstract);
      $("#cat").val(category);
    });

    $("#saveStatus").on('click', () => {
      const data = {
        title: $("#title").val(),
        adstract: $("#adstract").val(),
        postID: $("#id").val()
      }
      updatePost(data);
    })

    function updatePost(data) {
        callajax('http://localhost:3000/writer/posts', 'post', JSON.stringify(data));
    }

    function callajax(ajaxurl, method, datasend) {
      $.ajax({
          headers: {
              'Content-Type': 'application/json'
          },
          url: ajaxurl,
          type: method,
          data: datasend,
          async: false,
          error: function(d) {
              var fullError = JSON.stringify(d);
              console.log(fullError);
          }
      });
    }

  </script>
{{/section}}