    validate();
  })

  function validate() {
    // ... các lệnh validate khác

    const user = $('#txtUsername').val();
    $.getJSON(`/account/is-available?user=${user}`, function (data) {
      if (data === true) {
        $('#frmRegister').off('submit').submit();
      } else {
        alert('not available');
      }
    })
  }
</script> 