{{#section 'css'}}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">
{{/section}}
<h1 style="text-align:center;margin-top:10px;margin-bottom:10px">Welcome Editor</h1>
<div class="container">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>#</th>
        <th>Writer name</th>
        <th>Abtract</th>
        <th>Post date</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      {{#each this.editor}}
      <tr>
        <td hidden class="Id">{{PostID}}</td>
        <td hidden class="statusid">{{Status}}</td>
        <td hidden class="tagid">{{TagID}}</td>
        <td hidden class="catid">{{CatID}}</td>
        <td>{{count @index}}</td>
        <td>{{UserName}}</td>
        <td><a style="color:#007bff" href="/post/detail/{{PostID}}">{{Abtract}}</a></td>
        <td>{{PostDate}}</td>
        <td>{{StatusName}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
{{#section 'js'}}
<script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>
<script src="/public/js/editor.js"></script>
{{/section}}