                    </div>
                    <!-- Comment Area Start -->
                    <div class="comment_area clearfix bg-white mb-30 p-30 box-shadow">
                        <!-- Section Title -->
                        <div class="section-heading">
                            <h5>COMMENTS</h5>
                        </div>
                        <ol id="commentArea">
                            <!-- Single Comment Area -->
                            
                            <!-- Single Comment Area -->
                            {{#each this.comment as |alias|}}
