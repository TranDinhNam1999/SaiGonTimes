                        <!-- Section Title -->
                            <div class="section-heading">
                                <h5>LEAVE A REPLY</h5>
                            </div>
                            <!-- Reply Form -->
                            <div class="contact-form-area">
                                <form method="POST" id="frmComment">
                                    <div class="row">
                                        <div class="col-12">
                                            
                                            <textarea name="message" class="form-control" id="message" cols="30" rows="10" placeholder="Message*" required></textarea>
                                        </div>
                                        <input type="hidden" name="" id="txtUser" value="{{lcAuthUser.UserID}}">
                                    </div>
                                    <input type="submit" class="btn mag-btn mt-30" value="Submit Comment">
                                </form>
                            </div>
                        </div>
                    {{else}}
