                            {{#each this.tag as |alias|}}
                                <label for="" style="background-color: brown;">
                                    <a href="/post/byTag/{{TagID}}">{{Name}}</a>
                                </label> &nbsp;&nbsp;
                            {{/each}}

                            <!-- Post Meta -->
                            <div class="post-meta-2">
                                <input type="hidden" name="" id="txtPostID" value="{{this.post.PostID}}">
                                <a href="#"><i class="fa fa-eye" aria-hidden="true"></i>{{this.post.Views}}</a>
                                <a href="#"><i class="fa fa-thumbs-o-up" aria-hidden="true"></i>{{this.post.Ranks}}</a>
                                <a href="#"><i class="fa fa-comments-o" aria-hidden="true"></i> {{this.post.num_of_com}}</a>
                            </div>
                            {{{this.post.PostContent}}}

                            <!-- Post Author -->
                            <div class="post-author d-flex align-items-center">
                                <div class="post-author-thumb">
                                    <img src="/public/img/bg-img/52.jpg" alt="">
                                </div>
                                <div class="post-author-desc pl-4">
