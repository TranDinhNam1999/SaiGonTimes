                                <!-- Comment Content -->
                                <div class="comment-content d-flex">
                                    <!-- Comment Author -->
                                    <div class="comment-author">
                                        <img src="/public/img/bg-img/{{User}}.jpg" alt="author">
                                    </div>
                                    <!-- Comment Meta -->
                                    <div class="comment-meta">
                                        <a href="#" class="comment-date">{{CommentDate}}</a>
                                        <h6>{{UserName}}</h6>
                                        <p>{{CommentContent}}</p>
                                        <div class="d-flex align-items-center">
                                            <a href="#" class="like">like</a>
                                            
                                        </div>
                                    </div>
                                </div>
                            </li>
                            {{/each}}
                            
                        </ol>
                    </div>
    
                    <!-- Post A Comment Area -->
                    {{#if lcIsAuthenticated}}
